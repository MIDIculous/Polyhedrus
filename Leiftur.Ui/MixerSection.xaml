<UserControl x:Class="Leiftur.Ui.MixerSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Leiftur.Ui"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="220">
    <UserControl.Resources>
        <ResourceDictionary Source="Styles.xaml" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0">AM 1-2</Label>
        <Label Grid.Row="0" Grid.Column="1">AM 2-3</Label>
        <Label Grid.Row="0" Grid.Column="2">FM 1-2</Label>
        <Label Grid.Row="0" Grid.Column="3">FM 1-3</Label>
        <Label Grid.Row="0" Grid.Column="4">FM 2-3</Label>

        <local:ModKnob HorizontalAlignment="Center" Grid.Row="1" Grid.Column="0" />
        <local:ModKnob HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1" />
        <local:ModKnob HorizontalAlignment="Center" Grid.Row="1" Grid.Column="2" />
        <local:ModKnob HorizontalAlignment="Center" Grid.Row="1" Grid.Column="3" />
        <local:ModKnob HorizontalAlignment="Center" Grid.Row="1" Grid.Column="4" />

        <Label Grid.Row="2" Grid.Column="0">Noise</Label>
        <Label Grid.Row="2" Grid.Column="1">Color</Label>
        <Label Grid.Row="2" Grid.Column="2">Output</Label>

        <local:ModKnob HorizontalAlignment="Center" Grid.Row="3" Grid.Column="0" />
        <local:ModKnob HorizontalAlignment="Center" Grid.Row="3" Grid.Column="1" />
        <local:ModKnob HorizontalAlignment="Center" Grid.Row="3" Grid.Column="2" />
    </Grid>
</UserControl>
