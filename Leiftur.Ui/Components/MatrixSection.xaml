<UserControl x:Class="Leiftur.Ui.Components.MatrixSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:components="clr-namespace:Leiftur.Ui.Components"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="420">
    <UserControl.Resources>
        <ResourceDictionary Source="Styles.xaml" />
    </UserControl.Resources>
    <StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Width="93" Style="{StaticResource MatrixLabel}" FontWeight="Normal">Mod Source</Label>
            <Label Width="95" Style="{StaticResource MatrixLabel}" FontWeight="Normal">Destination</Label>
            <Label Width="93" Style="{StaticResource MatrixLabel}" FontWeight="Normal">Via Source</Label>
            <Label Width="65" Style="{StaticResource MatrixLabel}" FontWeight="Normal">Via Amount</Label>
            <Label Width="65" Style="{StaticResource MatrixLabel}" FontWeight="Normal">Amount</Label>
        </StackPanel>

        <ItemsControl ItemsSource="{Binding ModRoutes}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Label Width="93" Style="{StaticResource MatrixLabel}">Amp Envelope</Label>
                        <Label Width="95" Style="{StaticResource MatrixLabel}">Osc. 1 Pitch</Label>
                        <Label Width="93" Style="{StaticResource MatrixLabel}">None</Label>
                        <components:Spinner Width="65" Style="{StaticResource MatrixSpinner}" Min="-1.0" Max="1.0" Quantize="0.001" Delta="0.01" Formatter="{}0.000" />
                        <components:Spinner Width="65" Style="{StaticResource MatrixSpinner}" Min="-1.0" Max="1.0" Quantize="0.001" Delta="0.01" Formatter="{}0.000" />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>
