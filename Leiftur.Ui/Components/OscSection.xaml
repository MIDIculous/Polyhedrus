<components:BaseControl x:Class="Leiftur.Ui.Components.OscSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:components="clr-namespace:Leiftur.Ui.Components"
             xmlns:ui="clr-namespace:Leiftur.Ui"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary Source="Styles.xaml" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Grid.Row="1" Grid.Column="0">Octave</Label>
        <Label Grid.Row="1" Grid.Column="1">Semi</Label>
        <Label Grid.Row="1" Grid.Column="2">Cent</Label>
        <Label Grid.Row="1" Grid.Column="3">Pan</Label>
        <Label Grid.Row="1" Grid.Column="4">Volume</Label>

        <components:LightKnob HorizontalAlignment="Center" Grid.Row="0" Grid.Column="0" Steps="5" Min="-2" Max="2" DefaultValue="0" ui:OscAddress.Address="/*/Octave" />
        <components:LightKnob HorizontalAlignment="Center" Grid.Row="0" Grid.Column="1" Steps="25" Min="-12" Max="12" DefaultValue="0" ui:OscAddress.Address="/*/Semi" />
        <components:LightKnob HorizontalAlignment="Center" Grid.Row="0" Grid.Column="2" Steps="101" Min="-50" Max="50" DefaultValue="0" ui:OscAddress.Address="/*/Cent" />
        <components:LightKnob HorizontalAlignment="Center" Grid.Row="0" Grid.Column="3" Min="-1" Max="1" DefaultValue="0" ui:OscAddress.Address="/*/Pan" />
        <components:LightKnob HorizontalAlignment="Center" Grid.Row="0" Grid.Column="4" ui:OscAddress.Address="/*/Volume" />
        
        <Label Grid.Row="3" Grid.Column="0">Slop</Label>
        <Label Grid.Row="3" Grid.Column="1">Phase</Label>
        <Label Grid.Row="3" Grid.Column="2">Shape</Label>

        <components:LightKnob HorizontalAlignment="Center" Grid.Row="2" Grid.Column="0" DefaultValue="0" ui:OscAddress.Address="/*/Slop" />
        <components:LightKnob HorizontalAlignment="Center" Grid.Row="2" Grid.Column="1" ui:OscAddress.Address="/*/Phase" />
        <components:LightKnob HorizontalAlignment="Center" Grid.Row="2" Grid.Column="2" ui:OscAddress.Address="/*/Shape" />

        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="right" Margin="0,5,3,0">
            <Rectangle Width="39" Height="0.5" Fill="#50ffffff" Margin="0,1,10,0" />
            <Label Padding="0">Waveform</Label>
            <Rectangle Width="39" Height="0.5" Fill="#50ffffff" Margin="10,1,0,0" />
        </StackPanel>

        <StackPanel Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="3,5,0,0">
            <Rectangle Width="19" Height="0.5" Fill="#50ffffff" Margin="0,1,10,0" />
            <Label Padding="0">Routing</Label>
            <Rectangle Width="19" Height="0.5" Fill="#50ffffff" Margin="10,1,0,0" />
        </StackPanel>

        <components:MenuSelector Style="{StaticResource MenuSelectorStyle}" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" 
                                 Margin="6,10,3,10" SelectedItem="Sawtooth">
            <system:String>Sawtooth</system:String>
            <system:String>Pulse</system:String>
            <system:String>Triangle</system:String>
            <system:String>Sine</system:String>
        </components:MenuSelector>

        <components:MenuSelector Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="2" Style="{StaticResource MenuSelectorStyle}" Margin="3,10,6,10"
                                 SelectedItem="Character">
            <system:String>Character</system:String>
            <system:String>HP Filter</system:String>
            <system:String>Main Filter</system:String>
            <system:String>Direct</system:String>
        </components:MenuSelector>

    </Grid>
</components:BaseControl>
