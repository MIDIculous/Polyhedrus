<UserControl x:Class="Leiftur.Ui.Components.DelaySection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:components="clr-namespace:Leiftur.Ui.Components"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="392">
    <UserControl.Resources>
        <ResourceDictionary Source="Styles.xaml" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0">Delay L</Label>
        <Label Grid.Row="0" Grid.Column="1">Feedb L</Label>
        <Label Grid.Row="0" Grid.Column="2">LowPass</Label>
        
        

        <components:ModKnob HorizontalAlignment="Center" Grid.Row="1" Grid.Column="0" />
        <components:ModKnob HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1" />
        <components:ModKnob HorizontalAlignment="Center" Grid.Row="1" Grid.Column="2" />
        
        <Label Grid.Row="2" Grid.Column="0">Delay R</Label>
        <Label Grid.Row="2" Grid.Column="1">Feedb R</Label>
        <Label Grid.Row="2" Grid.Column="2">HighPass</Label>

        <components:ModKnob HorizontalAlignment="Center" Grid.Row="3" Grid.Column="0" />
        <components:ModKnob HorizontalAlignment="Center" Grid.Row="3" Grid.Column="1" />
        <components:ModKnob HorizontalAlignment="Center" Grid.Row="3" Grid.Column="2" />

        <Grid Grid.Column="3" Grid.ColumnSpan="1" Grid.RowSpan="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label Grid.Row="1" Grid.Column="0">Saturate</Label>
            <Label Grid.Row="1" Grid.Column="1">Diffuse</Label>
            <Label Grid.Row="1" Grid.Column="2">Crossfeed</Label>
            <Label Grid.Row="1" Grid.Column="3">Wet</Label>
            <Label Grid.Row="1" Grid.Column="4">Sync</Label>
            <components:ModKnob HorizontalAlignment="Center" Grid.Row="2" Grid.Column="0" />
            <components:ModKnob HorizontalAlignment="Center" Grid.Row="2" Grid.Column="1" />
            <components:ModKnob HorizontalAlignment="Center" Grid.Row="2" Grid.Column="2" />
            <components:ModKnob HorizontalAlignment="Center" Grid.Row="2" Grid.Column="3" />
            <components:FlatToggleButton Grid.Row="2" Grid.Column="4" />
        </Grid>
    </Grid>
</UserControl>
